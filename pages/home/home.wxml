<!--pages/home/home.wxml-->
<!-- 小程序的三个初体验 -->

<!-- 1.小程序的数据绑定 -->
<view>Hello {{name}}</view>
<view>我的年龄：{{age}}</view>
<!-- 2.列表展示 -->
<view wx:for="{{students}}" wx:key="index">{{item.iid}}-{{item.name}}-{{item.age}}</view>
<!-- 3.事件监听改变data -->
<view class="math">当前计数:{{counter}}</view>
<button size="mini" bindtap="handleBtnClick">-</button>
<button size="mini" bindtap="handleSubtraction">+</button>
