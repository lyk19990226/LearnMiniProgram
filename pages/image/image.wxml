<!--pages/image/image.wxml-->

<!-- image组件的基本使用 -->
<!-- 
  重点：
    1.image组件可以写成单标签，也可以修成双标签
    2.image组件默认有自己的大小。320x240
    3.image组件是一个行内块元素（inline-block）
 -->
 <!-- <view>呵呵</view>
 <image/>
 <text>哈哈</text> -->

 <!-- 2.src:本地路径（相对路径，绝对路径） /远程地址 -->
 <image src="../../assets/text/nba.jpg"></image><!--相对路径-->
  <image src="/assets/text/nba.jpg"></image><!--绝对路径-->
  <image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>

<!-- 补充：相册中的图片 -->
  <button bindtap="handleChooseAlbum">选中图片</button>
  <image src="{{imagePath}}"></image>

<!-- 3.bindload:监听图片加载完成 -->
 <!-- 4.lazy-load:懒加载,默认为false -->
<image  wx:for="{{10}}"
        wx:key="index"
        src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"
        bindload="handleImageLoad"
        lazy-load="{{true}}"></image>
<!-- show-menu-by-longpress :开启长按图片显示识别小程序码菜单 -->
<text>长按图片显示识别小程序码菜单</text>
<image show-menu-by-longpress src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
 
