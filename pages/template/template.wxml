<include src="/wxml/start.wxml"/>
<view>----------- template ----------</view>
<!-- 之前的时候小程序不支持自定义组件，为了进行代码的复用：template -->

<!-- 模板中包裹的内容，在没有被使用前，是不会进行任何的渲染的 -->
<template name="contentItem">
  <button>{{btnText}}</button>
  <text>{{content}}</text>
</template>
<!-- 使用模板，指定is的值，为模板name的值 ；  data指定里面组件的值： data="{{key1:value1,key2:value2,...,keyn:valuen}}-->
<template is="contentItem" data="{{btnText: '按钮', content: '嘎嘎嘎嘎嘎'}}"/>
<template is="contentItem" data="{{btnText: '按钮1', content: '啦啦啦啦啦啦'}}"/>
<template is="contentItem" data="{{btnText: '按钮2', content: '哈哈哈哈哈哈'}}"/>
<template is="contentItem" data="{{btnText: '按钮3', content: '嘿嘿嘿嘿嘿'}}"/>


<!--导入模板  -->
