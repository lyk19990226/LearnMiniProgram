<view>wx:for的基本使用</view>
<!--1.1 遍历字符串 -->
<view wx:for="lyk" wx:key="this">{{item}}-{{index}}</view>

<!-- 1.2遍历数组 -->
<view wx:for="{{['西游记','梦幻西游','虹猫蓝兔七侠传']}}" wx:key="this">{{item}}-{{index}}</view>

<!-- 1.3遍历对象 -->
<view wx:for="{{obj}}" wx:key="this">{{item}}-{{index}}-{{key}}</view>

<!-- 1.4遍历数字 -->
<view wx:for="{{5}}" wx:key="this">{{item}}-{{index}}</view>

