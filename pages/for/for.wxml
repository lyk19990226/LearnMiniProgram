<!-- 3.item,index 起名字
  wx:for-item   改item的名字
  wx:for-index  改index的名字
 -->

<view wx:for="{{movies}}" wx:key="this" wx:for-item="movie" wx:for-index="i">{{movie}} - {{i}}</view>

<block wx:for="{{nums}}" wx:key="this" wx:for-item="inner_item">
  <block wx:for="{{inner_item}}" wx:key="this">
    <view>{{item}}-{{index}}</view>
  </block>
</block>





